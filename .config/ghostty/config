# Appearance
theme = Builtin Solarized Dark
background-opacity = 0.85
window-padding-x = 5
window-padding-y = 0
window-padding-balance = true
title = " "

# Font
font-family = "CaskaydiaCove Nerd Font Mono"
font-size = 13
font-feature = -dlig
adjust-cell-height = 0
adjust-cell-width = -1

# Cursor
cursor-style = block

# macOS
macos-titlebar-style = tabs
macos-icon = xray

# Quick Terminal
quick-terminal-position = "top"
quick-terminal-screen = "main"
quick-terminal-animation-duration = 0.3

# Keybindings
keybind = "global:opt+t=toggle_quick_terminal"
keybind = "opt+z=toggle_split_zoom"

# Resize splits with Cmd + Shift + hjkl
keybind = cmd+shift+h=resize_split:left,20
keybind = cmd+shift+j=resize_split:down,20
keybind = cmd+shift+k=resize_split:up,20
keybind = cmd+shift+l=resize_split:right,20
